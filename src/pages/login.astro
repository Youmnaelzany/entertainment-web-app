---
import Layout from "../layouts/Layout.astro";
import "@/styles/globals.css";
---

<Layout title="Frontend Mentor | Entertainment web app">
  <!-- Header For Login Page -->
  <header class="flex justify-center items-center mt-[4.9rem] mb-[5.19rem]">
    <!-- Logo -->
    <img src="/assets/logo.svg" alt="Logo" class="" />
  </header>
  <main class="pb-[15.625rem]">
    <section
      class="bg-[#161D2F] flex flex-col gap-10 rounded-[1.25rem] w-[25rem] h-[23.3125rem] p-8 mx-auto"
    >
      <h1
        class="text-[#fff] text-[2rem] font-normal leading-normal tracking-[-0.03125rem]"
      >
        Login
      </h1>
      <form
        action=""
        method="post"
        class="flex flex-col justify-center items-center gap-6"
      >
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Email address"
          class="email-box placeholder:text-[#fff] placeholder:opacity-50 placeholder:text-[0.9375rem] placeholder:font-normal placeholder:leading-normal bg-[#161D2F] border-none outline-none text-[0.9375rem] font-normal leading-normal text-[#fff] pl-4"
        />
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Password"
          class="pass-box placeholder:text-[#fff] placeholder:opacity-50 placeholder:text-[0.9375rem] placeholder:font-normal placeholder:leading-normal bg-[#161D2F] border-none outline-none text-[0.9375rem] font-normal leading-normal text-[#fff] pl-4"
        />
        <button
          type="submit"
          class="w-[21rem] h-12 bg-[#fc4747] rounded-[0.375rem] text-[0.9375rem] font-normal leading-normal text-[#fff] hover:bg-[#fff] hover:text-[#161D2F] transition-all ease-in-out duration-500"
          >Login to your account</button
        >
      </form>
      <div class="flex justify-center items-center">
        <h2 class="text-[#fff] text-[0.9375rem] font-normal leading-normal">
          Login to your account?
          <a href="/sign-up" class="text-[#FC4747]">Sign Up</a>
        </h2>
      </div>
    </section>
  </main>
</Layout>
